<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="405dp"
        android:layout_height="204dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="3dp"
        android:background="@color/Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="38dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/textViewDonationPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="5dp"
                android:text="Shewrapara,Dhaka"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewBagOfBlood"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="42dp"
                android:text="1 bag blood needed for a children"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="69dp"
                android:text="Hospital:"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewHospitalName"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="69dp"
                android:text="Square Hospital"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textShow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="93dp"
                android:text="Phone:"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="93dp"
                android:text="0170000000"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="72dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/placeholder" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textViewNameDonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="84dp"
            android:layout_marginTop="5dp"
            android:text="Suharto Das"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewDonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/textViewBloodGrp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewDonor"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="98dp"
            android:text="AB+"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewDonationDate"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewDonor"
            android:layout_alignParentStart="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="98dp"
            android:text="02/04/2019"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewdonationTime"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewDonor"
            android:layout_alignParentStart="true"
            android:layout_marginStart="285dp"
            android:layout_marginTop="98dp"
            android:text="12:00PM"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="20dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>